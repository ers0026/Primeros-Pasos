        <TextBox x:Name="Label1" Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="227" Grid.Column="1" Margin="15,106.999,0,0" Text="Introduzca aquí el diámetro, en metros"/>
        <TextBox x:Name="Label2" Grid.ColumnSpan="4" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="10,171.117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232" Text="Introduzca aquí la altura, en metros"/>

    </Grid>
</Window>
