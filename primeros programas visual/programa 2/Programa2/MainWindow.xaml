        xmlns:local="clr-namespace:Programa2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="554*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Height="23" Margin="0,134.049,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="4"/>
        <TextBox x:Name="LabelResultados" Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="23" Margin="0,272.529,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="707" Grid.Column="1"/>
